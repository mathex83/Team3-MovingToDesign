<Page x:Class="FISK_Prototype.View.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FISK_Prototype.View.Pages"
      mc:Ignorable="d"
      Style="{StaticResource PageStyle}"
      Title="LoginPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="140"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="140"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Har du en konto?" Style="{StaticResource TextBlockStyle}" Margin="0,15,0,0" Grid.Row="0"/>
        <Button Grid.Row="1" Style="{StaticResource ButtonStyle}" Click="LoginButtonClick">
            <TextBlock Style="{StaticResource ButtonTextStyle}">Login</TextBlock>
        </Button>
        <TextBlock Text="Mangler du en konto?" Grid.Row="2" Style="{StaticResource TextBlockStyle}" Margin="0,15,0,0"/>
        <Button Grid.Row="3" Style="{StaticResource ButtonStyle}">
            <TextBlock Style="{StaticResource ButtonTextStyle}">Opret<LineBreak/>bruger</TextBlock>
        </Button>
    </Grid>
</Page>
